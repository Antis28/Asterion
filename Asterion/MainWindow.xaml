<Window x:Class="Asterion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asterion"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="355" >
    <Grid>
        <Grid.RowDefinitions>
            <!--   Главного меню -->
            <RowDefinition Height="auto"></RowDefinition>
            <!--  Место для TabControl -->
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions >
        <!--   Контент  для Tab элементов -->
        <TabControl Grid.Row="1" >
            <TabItem Header="Перезапуск explorer.exe">
                <Button x:Name="buttonRestartProcess" Content="Перезапустить" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,5,0,5" Click="buttonRestartProcess_Click"></Button>
            </TabItem>
            <TabItem Header="Таймер">
                <Grid>
                    <Button x:Name="startAlarm" Content="Start Alarm" HorizontalAlignment="Left" Margin="10,10,0,0" Padding="5,2,5,2" VerticalAlignment="Top" Height="auto" Width="auto" ></Button>
                    <Button x:Name="startTimer" Content="Start Timer" HorizontalAlignment="Left" Margin="10,50,0,0" Padding="5,2,5,2" VerticalAlignment="Top" Height="auto" Width="auto" ></Button>

                    <TextBlock x:Name="statusText" Text="Осталось:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="87,50,0,0"></TextBlock>
                    <ComboBox x:Name="hoursComboBox" HorizontalAlignment="Left" Margin="87,10,0,0" VerticalAlignment="Top" Width="auto"/>
                    <ComboBox x:Name="minutesComboBox" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Width="auto" />
                    <TextBox x:Name="adressPlayer" Height="23" Text="C:\Program Files (x86)\VideoLAN\VLC\vlc.exe" Width="306"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" MaxLines="1"/>
                    <TextBox x:Name="adressFile" Height="23" Text="M:\1.mp3" Width="307"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
                    <CheckBox x:Name="sleepFlag" Content="Гибернация" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top"/>

                </Grid>
            </TabItem>
            <TabItem Header="Слежение за интернетом">
                <Grid>
                    <Button x:Name="button" Content="Старт" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"  Grid.ColumnSpan="3"/>
                    <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,51,0,0" TextWrapping="Wrap" Text="Статус: не включено" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="Очистка каталогов">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="240*"/>
                    </Grid.RowDefinitions>
                    <TextBlock  x:Name="sizeDiskText" Text="ProgressBar text" Grid.Row="0"  Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Panel.ZIndex="1" Foreground="#FF00033A" />
                    <ProgressBar x:Name="sizeDiskProgressBar" Grid.Row="0" Height="25" Margin="50,10,50,10" VerticalAlignment="Top"  FontWeight="Bold" Background="#FFEEEEEE" BorderBrush="#FF4B004B" Foreground="#FF98FF68"/>



                    <ListView x:Name="consoleListView"
                   Margin="5" Padding="5" Grid.Row="2" Background="#FFFFFDEF"                   
                  >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Grid.Row="1">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="previewCleanButton" Grid.Column="0"
                Content="Анализ" HorizontalAlignment="Right" Margin="0,22,95,0" VerticalAlignment="Top" Width="75" Height="20" Click="previewCleanButton_Click"/>

                            <Button x:Name="cleanButton" Grid.Column="0"
                Content="Очистить" HorizontalAlignment="Right" Margin="0,22,15,0" VerticalAlignment="Top" Width="75" Panel.ZIndex="100" Height="20"/>


                            <ComboBox x:Name="comboBox" Grid.Column="1" HorizontalAlignment="Right" Margin="0,30,65,0" VerticalAlignment="Top" Width="53" Height="20" />
                            <CheckBox x:Name="checkBox" Grid.Column="1" Content="Автоматически очищать" Margin="0,10,10,0" HorizontalAlignment="Right"  VerticalAlignment="Top"  Height="15" Width="155"/>
                            <TextBlock  Text="Через"    Grid.Column="1" Margin="0,30,130,0" VerticalAlignment="Top" HorizontalAlignment="Right" Panel.ZIndex="1" Foreground="#FF00033A" Height="16" Width="33" />
                            <TextBlock  Text="час(ов)"  Grid.Column="1" Margin="0,30,20,0" VerticalAlignment="Top" HorizontalAlignment="Right" Panel.ZIndex="1" Foreground="#FF00033A" Height="16" Width="39" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>            
        </TabControl>

        <!--   Описание главного меню -->
        <Menu x:Name="menu" Grid.Row="0" Margin="0,0,0,0">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem x:Name="Settings" Header="Настройки" ></MenuItem>
        </Menu>

    </Grid>
</Window>
